@model List<ResultBasketWithProductDto>

@{
    Layout = null;
    decimal basketTotalPrice = 0;
    decimal tax = 0;
    decimal basketTotalPriceWithoutTax = 0;
    int count = 0;
    var menuTableId = Context.Session.GetInt32("MenuTableId");
    var customerCode = Context.Session.GetString("CustomerCode");
}

<!DOCTYPE html>
<html>

@await Component.InvokeAsync("_UILayoutHeadComponentPartial")

<body class="sub_page">

    @await Component.InvokeAsync("_UILayoutNavbarComponentPartial")
    </div>

    <br />
    <br />
    <div class="container-fluid">
        <div class="row px-xl-5">
            <div class="col-12">
                <nav class="breadcrumb bg-dark mb-30">
                    <a class="breadcrumb-item text-white" href="/Default/Index">Ana Sayfa</a>
                    <a class="breadcrumb-item text-white" href="/Menu/Index">Menü</a>
                    <span class="breadcrumb-item text-white active">Sepetiniz</span>
                </nav>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row px-xl-5">
            <div class="col-lg-8 table-responsive mb-5">
                <table class="table table-light table-borderless table-hover text-center mb-0">
                    <thead class="thead-dark">
                        <tr>
                            <th>#</th>
                            <th>Ürün Adı</th>
                            <th>Adet</th>
                            <th>Fiyat</th>
                            <th>Toplam</th>
                            <th>Sil</th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                        basketTotalPrice = Model.Sum(x => x.Price);
                        tax = Math.Round(((basketTotalPrice / 110 * 100) / 100 * 10), 2);
                        basketTotalPriceWithoutTax = basketTotalPrice - tax;
                        count++;
                        <tbody class="align-middle">
                            <tr>
                                <td class="align-middle">@count</td>
                                <td class="align-middle">@item.ProductName</td>
                                <td class="align-middle">@item.Count</td>
                                <td class="align-middle">@item.Price</td>
                                <td class="align-middle">@item.TotalPrice</td>
                                <td class="align-middle btn-delete"><a class="btn btn-sm btn-danger" href="/Basket/DeleteBasket/@item.BasketID"><i class="fa fa-times"></i></a></td>
                            </tr>
                        </tbody>
                    }
                </table>
            </div>
            <div class="col-log-4">
                <div class="input-group">
                    <input type="text" id="couponcode" onkeydown="return (event.keyCode != 13);" class="form-control border-1 p-4" placeholder="Kupon Kodunuz" />
                    <div>
                        <a href="javascript:void(0)" style="height:48px;padding-top:11px; margin-left:5px;" class="@(Model.Count == 0 ? "btn btn-warning disabled" : "btn btn-warning")" id="btncouponcode">Kuponu Uygula</a>
                    </div>
                </div>
                <div class="input-group mt-2">
                    <div id="couponSuccessAlert" class="alert alert-success" role="alert"></div>
                </div>
                <div class="input-group mt-2">
                    <div id="couponDangerAlert" class="alert alert-danger" role="alert"></div>
                </div>
                <br />
                <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-warning pr-3">Sepet Özeti</span></h5>


                <div class="bg-light p-30 mb-5">
                    <div id="container" class="border-bottom pb-2">
                        <div class="d-flex justify-content-between mb-6">
                            <h6>Toplam Tutar</h6>
                            <h6><span id="totalprice">@basketTotalPriceWithoutTax</span>₺</h6>
                        </div>
                        <div class="d-flex justify-content-between">
                            <h6 class="font-weight-medium">Kdv Miktarı</h6>
                            <h6 id="kdv" class="font-weight-medium">@tax</>₺</h6>
                        </div>
                        <br />
                    </div>
                    <div class="pt-2">
                        <div class="d-flex justify-content-between mt-2">
                            <h5>KDV Dahil Toplam Tutar</h5>
                            <h5><span id="totalpricewithkdv">@basketTotalPrice</span>₺</h5>
                        </div>
                        <div class="d-flex justify-content-between">
                            <h6 class="font-weight-medium">İndirim Miktarı</h6>
                            <h6 class="font-weight-medium"><span id="discount">0</span>₺</h6>
                        </div>
                        <div class="d-flex justify-content-between">
                            <h6 class="font-weight-medium">Ödenecek Tutar</h6>
                            <h6 class="font-weight-medium"><span id="totalpricewithdiscount">@basketTotalPrice</span>₺</h6>
                        </div>
                        <br />
                        <form method="post" asp-action="CompleteOrder" asp-controller="Basket">
                            <input name="MenuTableID" type="hidden" value="@menuTableId" />
                            <input name="CustomerCode" type="hidden" value="@customerCode" />
                            <input name="OrderDate" type="hidden" value="@DateTime.Now" />
                            <input name="TotalPrice" type="hidden" value="@basketTotalPrice" />
                            <input name="TotalDiscount" id="totaldiscount" type="hidden" value="0" />
                            <input name="FinalPrice" id="finalprice" type="hidden" value="@basketTotalPrice" />
                            <button id="btnchecked" onclick="showAlertComplete()" class="btn btn-block btn-warning font-weight-bold my-3" @(Model.Count == 0 ? "disabled" : "")>Siparişi Tamamla</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>


    @await Component.InvokeAsync("_UILayoutFooterComponentPartial")

    @await Component.InvokeAsync("_UILayoutScriptComponentPartial")

    <script>
        $(document).ready(function () {
            var couponSuccessAlert = $("#couponSuccessAlert");
            var couponDangerAlert = $("#couponDangerAlert");
            couponSuccessAlert.hide();
            couponDangerAlert.hide();
            $("#btncouponcode").click(function (e) {
                e.preventDefault();
                var couponCode = $("#couponcode").val();
                var totalPriceWithKdv = $("#totalpricewithkdv").text();
                console.log(totalPriceWithKdv);
                console.log(couponCode);
                var output = $("#discount");
                var totaldiscount = $("#totaldiscount");
                var totalpricewithdiscount = $("#totalpricewithdiscount");
                var finalprice = $("#finalprice");
                $.ajax({
                    url: `https://localhost:7282/api/Coupon/GetAmountByCouponCode?couponCode=${couponCode}`,
                    method: "GET",
                    success: function (response) {
                        var discount = 0;
                        if (response > 0) {
                            couponDangerAlert.hide();
                            couponSuccessAlert.show();
                            couponSuccessAlert.html(`<strong>${couponCode}</strong> kodu uygulandı.`);
                            discount = (parseFloat(totalPriceWithKdv) / 100 * response).toFixed(2);
                            output.html(`-${discount}`);
                            totaldiscount.val(`${discount}`);
                        } else {
                            couponSuccessAlert.hide();
                            couponDangerAlert.show();
                            couponDangerAlert.html(`Girilen kupon kodu geçersiz!`);
                            output.html(`0`);
                        }
                        totalpricewithdiscount.html(`${(parseFloat(totalPriceWithKdv) - discount).toFixed(2)}`);
                        finalprice.val(`${(parseFloat(totalPriceWithKdv) - discount).toFixed(2)}`);
                    },
                })
            })
        });

        function showAlertComplete() {
            Swal.fire({
                position: "center",
                icon: "success",
                title: "Siparişiniz İletildi",
                showConfirmButton: false,
                timer: 3000
            });
        }


    </script>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</body>

</html>
