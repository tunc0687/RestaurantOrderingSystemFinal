@model List<ResultBookingDto>
@{
    ViewData["Title"] = "GetBookingListByStatusToIncoming";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Rezervasyon İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Yeni Gelen Rezervasyonlar</h5>

                        <div class="card-sub clearfix">
                            <div class="float-start">
                                Rezervasyon ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz.
                            </div>
                            <div class="float-end">
                                <a href="/Booking/CreateBooking/" class="btn btn-primary">Yeni Rezervasyon Girişi</a>
                            </div>
                        </div>
                        <hr />
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Ad Soyad</th>
                                    <th scope="col">Telefon</th>
                                    <th scope="col">Kişi Sayısı</th>
                                    <th scope="col">Tarihi</th>
                                    <th scope="col">Rezervasyon Durumu</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                    @if (ViewBag.Description == "Rezervasyon İptal Edildi")
                                    {
                                        <th scope="col">Onayla</th>
                                    }
                                    else
                                    {
                                        <th scope="col">İptal Et</th>
                                    }
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <th scope="row">@count</th>
                                        <td>@item.Name</td>
                                        <td>@item.Phone</td>
                                        <td>@item.PersonCount</td>
                                        <td>@item.Date.ToString("d")</td>
                                        <td>@item.Description</td>
                                        <td><a href="/Booking/DeleteBooking/@item.BookingID" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a href="/Booking/UpdateBooking/@item.BookingID" class="btn btn-outline-warning">Güncelle</a></td>
                                        @if (ViewBag.Description == "Rezervasyon İptal Edildi")
                                        {
                                            <td><a href="/Booking/BookingStatusApproved/@item.BookingID" class="btn btn-outline-success">Onayla</a></td>
                                        }
                                        else
                                        {
                                            <td><a href="/Booking/BookingStatusCancelled/@item.BookingID" class="btn btn-outline-secondary">İptal Et</a></td>
                                        }
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Booking/CreateBooking/" class="btn btn-primary">Yeni Rezervasyon Girişi</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>