@model Tuple<List<ResultMenuTableDto>, List<string>, List<string>>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Masa İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Masa Listesi</h5>

                        <div class="card-sub clearfix">
                            <div class="float-start">
                                Masa ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz.
                            </div>
                            <div class="float-end">
                                <a href="/MenuTable/CreateMenuTable/" class="btn btn-primary">Yeni Masa Girişi</a>
                            </div>
                        </div>
                        <hr />
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Masa Adı</th>
                                    <th scope="col">Masa İnternet Adresi</th>
                                    <th scope="col">QR Kodu</th>
                                    <th scope="col">Durum</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < Model.Item1.Count; i++)
                                {
                                    <tr style="vertical-align: middle;">
                                        <th scope="row">@(i+1) </th>
                                        <td>@Model.Item1[i].Name</td>
                                        <td><a href="@Model.Item2[i]" class="btn btn-outline-primary">Masaya Git</a></td>
                                        <td><img src="@Model.Item3[i]" alt="" style="width:100px;height:100px" /></td>
                                        <td> <span class="@(Model.Item1[i].Status ? "badge bg-success" : "badge bg-danger")">@(Model.Item1[i].Status ? "Masa Dolu" : "Masa Boş")</span></td>
                                        <td><a href="/MenuTable/DeleteMenuTable/@Model.Item1[i].MenuTableID" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a href="/MenuTable/UpdateMenuTable/@Model.Item1[i].MenuTableID" class="btn btn-outline-warning">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/MenuTable/CreateMenuTable/" class="btn btn-primary">Yeni Masa Girişi</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>