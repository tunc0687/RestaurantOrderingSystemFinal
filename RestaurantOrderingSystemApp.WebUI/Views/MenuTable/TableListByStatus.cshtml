@model List<ResultMenuTableDto>
@{
    ViewData["Title"] = "TableListByStatus";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="pagetitle">
    <h1>Masa Listesi</h1>
</div>

<section class="section dashboard">
    <div class="row">
        <div class="col-lg-12">
            <div id="menutablestatus" class="row">
                @foreach (var item in Model)
                {
                    <div class="col-lg-3 col-md-6">
                        <div class="@(item.Status ? "card info-card bg-success" : "card info-card bg-danger")">
                            <div class="card-body">
                                <h5 class="table-card-title"><small><b>@item.Name</b></small></h5>

                                <div class="d-flex align-items-center">
                                    <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                        <i class="bx bx-desktop"></i>
                                    </div>
                                    <div class="ps-3">
                                        <h6 class="text-light">@(item.Status ? "Masa Dolu" : "Masa Boş")</h6>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>

