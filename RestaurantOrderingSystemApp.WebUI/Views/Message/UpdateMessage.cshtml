@model UpdateMessageDto
@{
    ViewData["Title"] = "UpdateMessage";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Mesaj İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Mesaj Güncelleme Sayfası</h5>

                        <form class="row g-3" method="post">
                            <input type="hidden" asp-for="MessageID" />
                            <input type="hidden" asp-for="MessageSendDate" />
                            <div class="col-12">
                                <label for="NameSurname" class="form-label">Ad Soyad</label>
                                <input type="text" class="form-control" asp-for="NameSurname" id="NameSurname">
                            </div>
                            <div class="col-12">
                                <label for="Mail" class="form-label">Mail Adresi</label>
                                <input type="email" class="form-control" asp-for="Mail" id="Mail">
                            </div>
                            <div class="col-12">
                                <label for="Phone" class="form-label">Telefon</label>
                                <input type="text" class="form-control" asp-for="Phone" id="Phone">
                            </div>
                            <div class="col-12">
                                <label for="Subject" class="form-label">Mesaj Konusu</label>
                                <input type="text" class="form-control" asp-for="Subject" id="Subject">
                            </div>
                            <div class="col-12">
                                <label for="MessageContent" class="form-label">Mesaj İçeriği</label>
                                <textarea rows="3" class="form-control" asp-for="MessageContent" id="MessageContent"></textarea>
                            </div>
                            <div class="text-left">
                                <button type="submit" class="btn btn-primary">Mesajı Güncelle</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

