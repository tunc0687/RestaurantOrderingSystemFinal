@model List<ResultOrderDetailWithProductDto>

@{
    Layout = null;
    var menuTableId = Context.Session.GetInt32("MenuTableId");
    var customerCode = Context.Session.GetString("CustomerCode");
    decimal totalPrice = Model.Sum(x => x.TotalPrice);
    decimal totalDiscount = Convert.ToDecimal(Context.Session.GetString("TotalDiscount"));
    decimal finalPrice = totalPrice - totalDiscount;
}

<!DOCTYPE html>
<html>

@await Component.InvokeAsync("_UILayoutHeadComponentPartial")

<body class="sub_page">

    @await Component.InvokeAsync("_UILayoutNavbarComponentPartial")
    </div>

    <br />
    <br />
    <div class="container-fluid">
        <div class="row px-xl-5">
            <div class="col-12">
                <nav class="breadcrumb bg-dark mb-30">
                    <a class="breadcrumb-item text-white" href="/Default/Index">Ana Sayfa</a>
                    <a class="breadcrumb-item text-white" href="/Menu/Index">Menü</a>
                    <span class="breadcrumb-item text-white active">Siparişleriniz</span>
                </nav>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row px-xl-5">
            <div class="col-lg-12 table-responsive mb-5">
                <table class="table table-light table-borderless table-hover text-center mb-0">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Ürün Adı</th>
                            <th scope="col">Sipariş Durumu</th>
                            <th scope="col">Miktarı</th>
                            <th scope="col">Birim Fiyatı</th>
                            <th scope="col">Toplam Fiyatı</th>
                        </tr>
                    </thead>
                    <tbody class="align-middle">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="align-middle">@item.ProductName</td>
                                <td> <span class="@(item.Description == "Sipariş Alındı" ? "badge bg-warning" : (item.Description == "Sipariş Hazırlanıyor" ? "badge bg-primary" : "badge bg-success"))">@item.Description</span></td>
                                <td class="align-middle">@item.Count</td>
                                <td class="align-middle">@item.Price₺</td>
                                <td class="align-middle">@item.TotalPrice₺</td>
                            </tr>
                        }
                        <tr class="border-top">
                            <td class="align-middle"></td>
                            <td class="align-middle"></td>
                            <td class="align-middle"></td>
                            <th class="align-middle">Toplam Tutar</th>
                            <td class="align-middle">@totalPrice₺</td>
                        </tr>
                        <tr>
                            <td class="align-middle"></td>
                            <td class="align-middle"></td>
                            <td class="align-middle"></td>
                            <th class="align-middle">İndirim Miktarı</th>
                            <td class="align-middle">@totalDiscount₺</td>
                        </tr>
                        <tr>
                            <td class="align-middle"></td>
                            <td class="align-middle"></td>
                            <td class="align-middle"></td>
                            <th class="align-middle">Ödemeniz Gereken Tutar</th>
                            <td class="align-middle">@finalPrice₺</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>


    @await Component.InvokeAsync("_UILayoutFooterComponentPartial")

    @await Component.InvokeAsync("_UILayoutScriptComponentPartial")

</body>

</html>
