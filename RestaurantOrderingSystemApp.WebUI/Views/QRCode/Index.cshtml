
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">QR Kod İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">QR Kod Oluşturma Sayfası</h5>

                        <form class="row g-3" method="post">
                            <div class="col-12">
                                <label for="qrcode" class="form-label">QR Kod Metni Giriniz</label>
                                <input name="qrcode" type="text" class="form-control" id="qrcode">
                            </div>
                            <div class="text-left">
                                <button type="submit" class="btn btn-warning">QR Kod Oluştur</button>
                            </div>
                        </form>
                    </div>
                    <div class="card-body">
                        @if (ViewBag.QrCodeImage != null)
                        {
                            <img src="@ViewBag.QrCodeImage" alt="" style="width:400px;height:400px" />
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
