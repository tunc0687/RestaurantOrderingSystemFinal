
@model UserEditDto  

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Profil Ayarları </h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Şifre ve Bilgi Güncelleme Sayfası</h5>

                        <form class="row g-3" method="post">
                            <div class="col-12">
                                <label for="Name" class="form-label">Adınız</label>
                                <input type="text" class="form-control" asp-for="Name" id="Name">
                            </div>

                            <div class="col-12">
                                <label for="Surname" class="form-label">Soyadınız</label>
                                <input type="text" class="form-control" asp-for="Surname" id="Surname">
                            </div>
                            <div class="col-12">
                                <label for="Email" class="form-label">Mail Adresiniz</label>
                                <input type="email" class="form-control" asp-for="Email" id="Email">
                            </div>
                            <div class="col-12">
                                <label for="Username" class="form-label">Kullanıcı Adınız</label>
                                <input type="text" class="form-control" asp-for="Username" id="Username">
                            </div>
                            <div class="col-12">
                                <label for="Password" class="form-label">Şifreniz</label>
                                <input type="password" class="form-control" asp-for="Password" id="Password">
                            </div>
                            <div class="col-12">
                                <label for="ConfirmPassword" class="form-label">Şifrenizi Onaylayın</label>
                                <input type="password" class="form-control" asp-for="ConfirmPassword" id="ConfirmPassword">
                            </div>
                            <div class="text-left">
                                <button type="submit" class="btn btn-success">Bilgiler Güncelle</button>
                            </div>
                            
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


