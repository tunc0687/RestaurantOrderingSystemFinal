
@model List<ResultContactDto>
@foreach(var item in Model){
<footer class="footer_section">
    <div class="container">
        <div class="row">
            <div class="col-md-4 footer-col">
                <div class="footer_contact">
                    <h4>
                        Bize Ulaşın
                    </h4>
                    <div class="contact_link_box">
                        <a href="https://www.google.com/maps/search/@item.Location" target="_blank">
                            <i class="fa fa-map-marker" aria-hidden="true"></i>
                            <span>
                                @item.Location
                            </span>
                        </a>
                        <a href="">
                            <i class="fa fa-phone" aria-hidden="true"></i>
                            <span>
                                @item.Phone
                            </span>
                        </a>
                        <a href="">
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                            <span>
                               @item.Mail
                            </span>
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 footer-col">
                <div class="footer_detail">
                    <a href="/Default/Index/" class="footer-logo">
                        @item.FooterTitle
                    </a>
                    <p>
                        @item.FooterDescription
                    </p>
                        @await Component.InvokeAsync("_UISocialMediaComponentPartial")
                </div>
            </div>
            <div class="col-md-4 footer-col">
                <h4>
                    @item.OpenDays
                </h4>
                <p>
                    @item.OpenDaysDescription
                </p>
                @item.OpenHours
                <p>
                </p>
            </div>
        </div>
        <div class="footer-info">
            <p>
                &copy; <span id="displayYear"></span> Tüm Hakları Saklıdır
                <a href="https://html.design/">B | K Restoran</a><br><br>
                &copy; <span id="displayYear"></span>  GELİŞTİREN B|K YAZILIM 
                <a href="https://themewagon.com/" target="_blank"></a>
            </p>
        </div>
    </div>
</footer>
}