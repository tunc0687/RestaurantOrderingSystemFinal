@model CreateSocialMediaDto
@{
    ViewData["Title"] = "CreateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Sosyal Medya İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Yeni Sosyal Medya Hesabı Girişi</h5>

                        <form class="row g-3" method="post">
                            <div class="col-12">
                                <label for="Title" class="form-label">Başlık Giriniz</label>
                                <input type="text" class="form-control" asp-for="Title" id="Title">
                            </div>
                            <div class="col-12">
                                <label for="Icon" class="form-label">İkon Giriniz</label>
                                <input type="text" class="form-control" asp-for="Icon" id="Icon">
                            </div>
                            <div class="col-12">
                                <label for="Url" class="form-label">Link Giriniz</label>
                                <input type="text" class="form-control" asp-for="Url" id="Url">
                            </div>
                            <div class="text-left">
                                <button type="submit" class="btn btn-primary">Sosyal Medya Hesabını Ekle</button>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

